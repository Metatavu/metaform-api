<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

  <display-name>Metaform API</display-name>
  <description>Metaform API Server</description>
  
  <context-param>
    <param-name>keycloak.config.resolver</param-name>
    <param-value>fi.metatavu.metaform.server.keycloak.MetaformKeycloakConfigResolver</param-value>
  </context-param>
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>ping</web-resource-name>
      <url-pattern>/v1/system/ping</url-pattern>
    </web-resource-collection>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
  </security-constraint>

  <login-config>
    <auth-method>KEYCLOAK</auth-method>
  </login-config>
  
</web-app>
